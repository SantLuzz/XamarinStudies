<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApoXamarinMod1.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Determina se um número é Par ou Impar"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtNumero" Keyboard="Numeric" Placeholder="Digite um valor..."/>
            <Button x:Name="btnExecutar"  Text="Executar"/>
            <Label x:Name="lblResposta" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>